<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <filter>
        <filter-name>FiltroPeticiones</filter-name>
        <filter-class>filtros.FiltroPeticiones</filter-class>
    </filter>
    <filter>
        <filter-name>FiltroLogin</filter-name>
        <filter-class>filtros.FiltroLogin</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>FiltroLogin</filter-name>
        <url-pattern>/controlEmpleados</url-pattern>
        <url-pattern>/controlClientes</url-pattern>
        <url-pattern>/controlProductos</url-pattern>
    </filter-mapping>
    <filter-mapping>
        <filter-name>FiltroPeticiones</filter-name>
        <url-pattern>/controlEmpleados</url-pattern>
        <url-pattern>/controlClientes</url-pattern>
        <url-pattern>/controlProductos</url-pattern>
    </filter-mapping>
    <servlet>
        <servlet-name>ControlEmpleados</servlet-name>
        <servlet-class>servlets.ControlEmpleados</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ControlClientes</servlet-name>
        <servlet-class>servlets.ControlClientes</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ControlProductos</servlet-name>
        <servlet-class>servlets.ControlProductos</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>SecretKey</servlet-name>
        <servlet-class>servlets.SecretKeyProvider</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Login</servlet-name>
        <servlet-class>servlets.Login</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ControlEmpleados</servlet-name>
        <url-pattern>/controlEmpleados</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ControlClientes</servlet-name>
        <url-pattern>/controlClientes</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ControlProductos</servlet-name>
        <url-pattern>/controlProductos</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>SecretKey</servlet-name>
        <url-pattern>/secretKey</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Login</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
</web-app>
